<script>
  function showPage(num) {
    document.querySelectorAll(".card").forEach(c => c.style.display = "none");
    document.getElementById("page" + num).style.display = "block";
  }

  function nextBrave() {
    const val = document.getElementById("brave").value;
    if (val < 40) {
      alert("Keberanian kamu masih kurang ğŸ˜­ tambahin dulu!");
      return;
    }
    showPage(3);
  }

  // HEART GAME
  function finishHeart() {
    showPage(5);
  }

  function moveHeart() {
    setInterval(() => {
      const h = document.getElementById("heartMini");
      h.style.top = (Math.random() * 250) + "px";
      h.style.left = (Math.random() * 250) + "px";
    }, 700);
  }
  moveHeart();
</script>

